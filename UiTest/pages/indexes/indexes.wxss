.indexes {
  background-color: #fff;
  font-size: 32rpx;
  line-height: 48rpx;
  color: rgba(0, 0, 0, 0.9);
  padding: 48rpx 0rpx 96rpx 0rpx;
  min-height: 100vh;
}
.indexes .box {
  margin: 0 32rpx;
}
.indexes .sub-title {
  margin-top: 40rpx;
  font-weight: bold;
  padding: 0 32rpx;
}
.indexes .button-wrap {
  display: flex;
  margin: 32rpx 0 64rpx;
}
.indexes .type-button {
  height: 80rpx;
  border-radius: 8rpx;
  border: 1rpx solid #dcdcdc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  margin-bottom: 18px;
}
