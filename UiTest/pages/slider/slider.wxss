page {
  background: #fff;
  padding-bottom: 100rpx;
}
.t-slider-title,
.t-slider-desc {
  margin: 0 32rpx;
}
.t-slider-title {
  padding-top: 48rpx;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 56rpx;
}
.t-slider-desc {
  color: rgba(0, 0, 0, 0.4);
  margin-top: 16rpx;
  font-size: 26rpx;
  line-height: 36rpx;
}
.t-slider-wrapper {
  margin-top: 40rpx;
  margin-bottom: 8rpx;
}
.t-slider-wrapper-title,
.t-slider-wrapper-desc {
  margin: 0 32rpx;
}
.t-slider-wrapper-title {
  color: rgba(0, 0, 0, 0.9);
  font-size: 32rpx;
  font-weight: 500;
  line-height: 48rpx;
  margin-bottom: 16rpx;
  margin-top: 48rpx;
}
.t-slider-wrapper-desc {
  margin: 32rpx;
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  line-height: 36rpx;
  white-space: pre-line;
}
.t-slider-wrapper .space-container {
  margin-bottom: 48rpx;
}
.label {
  display: flex;
  align-items: center;
  width: 718rpx;
  padding-left: 32rpx;
}
.label-class {
  flex-grow: 1;
}
.t-slider__mark {
  margin: 0 12rpx;
}
